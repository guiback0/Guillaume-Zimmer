generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model works {
  id          Int      @id @default(autoincrement())
  title       String
  image       String
  description String
  date        String
  url         String
  type        Boolean
}

model socials {
  id            Int      @id @default(autoincrement())
  name          String
  image         String
  mediumImage   String
  description   String
  wrapperType   String
  href          String?
}

model skills {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  icon        String
}